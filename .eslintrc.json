{
"env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jquery": true
    },
    "extends": [
        "airbnb",
        "prettier"
    ],
    "plugins": [
        "import",
        "json-files",
        "prettier"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ],
        "indent": "off",
        "quotes": "off",
        "no-console": "error",
        "func-names":"off",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": false,
                "tabWidth": 2
            }
        ],
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        "no-shadow": "off",
        "no-plusplus" :"off",
        "no-param-reassign" :"off"
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true
        }
       
    }
}